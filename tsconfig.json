{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext.asynciterable", "ES2022", "scripthost" ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
      ],
    },
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "exclude": [
    "devtools",
    "dist",
    "node_modules",
    "scripts",
    "webpack",
    "jest",
    "babel.config.js",
    "jest.config.js",
    "webpack.config.js",
    "src/sw.js",
    "resources"
  ]
}
